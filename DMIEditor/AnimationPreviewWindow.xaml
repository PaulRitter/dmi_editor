<Window x:Class="DMIEditor.AnimationPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DMIEditor"
        mc:Ignorable="d"
        Title="Animation Preview" Height="250" Width="200">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock VerticalAlignment="Center" Margin="0,0,10,0">Direction:</TextBlock>
            <ComboBox VerticalAlignment="Center" x:Name="dir_selector"></ComboBox>
        </StackPanel>
        <Grid>
            <Image x:Name="image_background"></Image>
            <Image x:Name="image_viewer"></Image>
        </Grid>
    </StackPanel>
</Window>
